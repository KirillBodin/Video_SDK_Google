generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = https://backend-videosdk.onrender.com 
}


model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role
  name     String
  schoolId Int?  


  school   School?       @relation(fields: [schoolId], references: [id], onDelete: Cascade)
  meetings ClassMeeting[] 
}


model School {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[] 
}


model ClassMeeting {
  id        Int    @id @default(autoincrement())
  className String
  meetingId String @unique
  teacherId Int    

  teacher   User   @relation(fields: [teacherId], references: [id], onDelete: Cascade)
}


enum Role {
  SUPERADMIN
  ADMIN
  TEACHER
}
